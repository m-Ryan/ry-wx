{
  "presets": [
    [
      "@babel/env",
      {
        "modules": false
      }
    ],
    "@babel/preset-typescript"
  ],
  "plugins": [
    ["@babel/plugin-proposal-decorators", { "legacy": true }],
    "lodash",
    "@babel/plugin-transform-modules-commonjs",
    [
      "@babel/plugin-transform-runtime",
      {
        "corejs": false,
        "helpers": true,
        "regenerator": true,
        "useESModules": false
      }
    ],
    [
      "babel-plugin-copy-npm",
      {
        "rootDir": "src",
        "outputDir": "dist",
        "npmDir": "npm",
        "format": "cjs",
        "strict": false,
        "minify": true
      }
    ]
  ]
}
