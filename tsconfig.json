{
	"compilerOptions": {
		"module": "es2015",
		"target": "es2017",
		"outDir": "dist",
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"pretty": true,
		"importHelpers": true,
		"noFallthroughCasesInSwitch": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"lib": [
			"es5",
			"es2015.core",
			"es2015.symbol",
			"es2015.collection",
			"es2015.promise",
			"es2015.iterable",
			"es2015.symbol.wellknown",
			"es2016.array.include",
			"dom"
		],
		"baseUrl": ".",
		"paths": {

		}
	},
	"include": [
		"src/**/**/*",
		"typings/*"

	]
}
